<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no">
    <script src="js/jquery-1.11.3.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap.css" type="text/css">
    <title>登录界面</title>
</head>
<style>
    .form-group {
        margin-bottom: 40px;
    }
</style>
<body>
    <% include header.ejs %>

    <div class="jumbotron">
        <div class="container">
            <h1>用户注册</h1>
            <div class="col-md-10 col-md-offset-1">
                <form class="form-horizontal" style="margin-top: 100px">
                    <div class="form-group">
                        <label for="userName" class="col-sm-2 control-label">用户名</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="userName" placeholder="用户名">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="userPwd" class="col-sm-2 control-label">密码</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="userPwd" placeholder="用户密码">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox col-md-offset-2" style="padding-left: 15px">
                            <label>
                                <input type="checkbox"> 我遵守注册规定
                            </label>
                        </div>
                    </div>
                </form>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10" style="padding-left: 5px">
                        <button type="button" class="btn btn-primary" id="sub-btn" style="width: 120px">注册</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
<script>
    $(function (){
        $('#bs-navbar').find('li').removeClass('active');
        $('#bs-navbar').find('li').eq(3).addClass('active');
        //注册表当提交
        $("#sub-btn").click(function (e) {
            var userName = $('#userName').val();
            var userPdw = $("#userPwd").val();
            $.post("/doregist", {
                "userName": userName,
                "userPassword": userPdw
            }, function (result) {
                if (result.code == '0000') {
                    window.location.href = '/';
                } else {
                    alert(result.content)
                }
            })
        });

        $.post('/do', {}, function (result) {
            if (result.code == '0000') {
                $('#nav-logined').show();
                $("#nav-not-login").hide();
                $('.nav-name').find('span').text(result.content.name);
            } else {
                $('#nav-logined').hide();
                $("#nav-not-login").show();
            }
        });
    })
</script>
